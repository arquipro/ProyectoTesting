
<link href="~/Assets/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

@using Model.Entity
@model List<Cliente>
@{
    ViewBag.Title = "BuscarPorCodigo";
    Layout = null;
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script>
    $(document).ready(function () {

        $("#tbcliente tbody tr").dblclick(function () {
            var Cliente = {};
            var n, a,m;
            n = Cliente.Codigo = $(this).children().eq('0').text();
            a = Cliente.DatosPersonales = $(this).children().eq('1').text() + " " + $(this).children().eq('2').text();
            m = Cliente.Identificacion = $(this).children().eq('3').text();
            console.info(a, n,m);
            window.opener.obtenerCliente(Cliente);
            window.close();
            
          

        });
    });
</script>

<div class="panel panel-default">
    
    <div class="panel-body">
        @using (Html.BeginForm())
            {
            <div class="form-horizontal">
                <h2 > Buscar cliente por:</h2>
                <fieldset>
                    <div class="row" style="padding-bottom:8px;">
                        <div class="form-group col-md-3">
                            @Html.Label("Nombre", new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.TextBox("txtnombre", null, new { @class = "form-control form-control-lg" })
                            </div>
                        </div>
                        <div class="form-group col-md-3">
                            @Html.Label("Codigo", new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.TextBox("txtcliente", null, new { @class = "form-control form-control-lg" })
                            </div>
                        </div>
                        <div class="form-group col-md-3">
                            @Html.Label("DNI", new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.TextBox("txtdni", null, new { @class = "form-control form-control-lg", @type = "number" })
                            </div>
                        </div>
                        <div class="form-group col-md-3">
                            @Html.Label("Ap.Paterno", new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.TextBox("txtappaterno", null, new { @class = "form-control form-control-lg" })
                            </div>
                        </div>
                    </div>
                </fieldset>
            </div>

                <input class="btn btn-primary btn-lg" type="submit" value="Buscar" />
        }
    </div>
</div>

<table class="table table-hover" id="tbcliente">

    <thead class="thead-dark">
        <tr>
            <th>Codigo</th>
            <th>Nombre</th>
            <th>Apellidos</th>
            <th>Dni</th>
            <th>Direccion</th>
            <th>Telefono</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var objCliente in Model)
        {
            <tr>
                <th scope="row">@objCliente.IdCliente</th>
                <td>@objCliente.Nombre</td>
                <td>@objCliente.Appaterno @objCliente.Apmaterno</td>
                <td>@objCliente.Dni</td>
                <td>@objCliente.Direccion</td>
                <td>@objCliente.Telefono</td>               
            </tr>
        }
    </tbody> 
</table>
<script src="~/Assets/bootstrap/js/bootstrap.min.js"></script>
<script src="~/Assets/jquery/jquery.min.js"></script>